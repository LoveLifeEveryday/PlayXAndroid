<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clipChildren="false">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_login"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/white" />


    <LinearLayout
        android:id="@+id/ll_logo_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tb_login"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.xcynice.playxandroid.module.login.widget.LogoAnimView
            android:id="@+id/lav_login"
            android:layout_width="100dp"
            android:layout_height="100dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="欢迎使用"
            android:textColor="@color/basic_ui_action_bar_text"
            android:textSize="@dimen/text_headline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:alpha="0.8"
            android:text="本APP由『许朋友爱玩火』开发"
            android:textColor="@color/basic_ui_action_bar_text"
            android:textSize="@dimen/text_notes" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_input_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_logo_login"
        android:layout_marginTop="30dp"
        android:clipChildren="false">


        <per.goweii.percentimageview.percentimageview.PercentImageView
            android:id="@+id/iv_circle_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="-150dp"
            android:layout_marginEnd="-190dp"
            android:alpha="0.7"
            android:background="@drawable/bg_solid_round_color_surface_radius_max"
            app:piv_basics="width"
            app:piv_percent="1" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <per.goweii.percentimageview.percentimageview.PercentImageView
                android:id="@+id/iv_circle_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="-170dp"
                android:layout_marginRight="-170dp"
                android:alpha="0.7"
                android:background="@drawable/bg_solid_round_color_surface_radius_max"
                app:piv_basics="width"
                app:piv_percent="1" />
        </androidx.viewpager.widget.ViewPager>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text=""
        android:textColor="@color/authorTextColor"
        android:textSize="@dimen/text_notes" />

</RelativeLayout>